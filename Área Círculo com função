#include <stdio.h>
#define PI 3.1415 


float area_circulo(float raio)
{
	float area;

	area = PI * raio * raio;
	return area;
}

int main()
{
	float raio, 
              area;

	printf("Entre com o valor do raio\n");
	scanf("%f", &raio);

	area = area_circulo(raio);

	printf("Esse é o valor da área = %.3f\n", area);
	return 0;
}
