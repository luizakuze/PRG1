#include <stdio.h>
#define PI 3.1415 


float area_circulo(float praio)
{
	float area;

	area = PI * praio * praio;
	return area; // pra que o return aqui??????
}

float area_anel(float raio_externo, float raio_interno)
{
	float area_circulo_exteno, area_circulo_interno;

	area_circulo_externo = area_circulo(raio_externo);
	area_circulo_interno = area_circulo(raio_interno);
	area = area_circulo_externo - area_circulo_interno;

	//area = area_circulo(raio_externo) - area_circulo(raio_interno);
	return area; // ???????
}

int main()
{
	float raio1, raio2,
              area;

	printf("Entre com o valor do primeiro raio\n");
	scanf("%f", &raio1);

	printf("Entre com o valor do segundo raio\n");
	scanf("%f", &raio2);
	 
	area = area_anel(raio1, raio2);
	
	//??????

	printf("Esse é o valor da área do anel = %.3f\n", area);
	return 0;
}
